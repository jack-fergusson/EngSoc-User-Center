# Auth Service Environment Variables
# Copy this file to .env and fill in your values

# Server Port
PORT=4001

# MongoDB Connection String
# For local MongoDB: mongodb://localhost:27017/engsoc_user_center
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database_name
MONGO_URI=mongodb://localhost:27017/engsoc_user_center

# Session Secret (generate a random string)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Google OAuth Credentials (optional - only needed for Google login)
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# API Gateway URL (used for OAuth callback)
VITE_API_URL=http://localhost:4000

# Frontend URL (used for OAuth redirect after login)
FRONTEND_URL=http://localhost:5173

